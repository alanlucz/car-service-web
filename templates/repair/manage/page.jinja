{% extends '__main.jinja' %}
{% from 'macros/form.jinja' import form_field, form_inline_field, form_submit with context %}

{% block content %}
    <div class="main">
        <div class="container-50">
            <div class="orders-header">
                <h1>Opravy</h1>
                <a href="{{ url_for('repair.view_add_repair_page') }}" class="add-button"><i class="fa-solid fa-plus fa-xl"></i></a>
            </div>

            <div class="orders-list">
                {% for repair in repairs %}
                    <div class="order-card">
                        <div class="order-card-first-row">
                            <div class="order-info">
                                <div class="avatar"><i class="fa-solid fa-wrench fa-lg" style="color: white"></i></div>
                                <div class="order-status">{{ repair.cas_straveny_na_oprave }} h</div>
                                <div class="order-description">{{ repair.popis_provedenych_praci }}</div>
                            </div>
                        </div>
                        <div class="order-details">
                            <div>
                                <div>Od: {{ repair.datum_zacatku_opravy }}</div>
                                <div>Do: {{ repair.datum_konce_opravy }}</div>
                            </div>
                            <div>Provedl: <br /> {{ repair.jmeno }} {{ repair.prijmeni }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
