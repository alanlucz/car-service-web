{% extends '__main.jinja' %}
{% from 'macros/form.jinja' import form_field, form_inline_field, form_submit with context %}

{% block content %}
    <div class="main">
        <div class="container-50">
                <h1>Přidat nového zákazníka</h1>
                <form method="POST">
                    {{ form_field(form.first_name) }}
                    {{ form_field(form.last_name) }}
                    {{ form_field(form.email) }}
                    {{ form_field(form.password) }}
                    {{ form_submit("Přidat zákazníka") }}
                </form>
        </div>
    </div>
{% endblock %}