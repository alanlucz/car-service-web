{% extends '__main.jinja' %}
{% from 'macros/form.jinja' import form_field, form_inline_field, form_submit with context %}

{% block content %}
    <div class="main">
        <div class="container-50">
            <div class="employee-header">
                <h1>ZamÄ›stnanci</h1>
                <a href="{{ url_for('employee.view_add_employee_page') }}" class="add-button"><i class="fa-solid fa-plus fa-xl"></i></a>
            </div>

            <div class="employee-list">
                {% for employee in employees %}
                    <div class="employee-card">
                        <div class="employee-info">
                            <div class="avatar"><i class="fa-solid fa-user fa-lg" style="color: white"></i></div>
                            <div class="name-group">
                                <div class="employee-name">{{ employee.jmeno }} {{ employee.prijmeni }}</div>
                                <div class="employee-role">{{ employee.nazev_role }}</div>
                            </div>
                        </div>
                        <div class="employee-actions">
                            <a class="btn edit" href="{{ url_for('employee.view_edit_employee_page', employee_id=employee['id_uzivatele']) }}">Upravit</a>
                            <a class="btn edit-mobile" href="{{ url_for('employee.view_edit_employee_page', employee_id=employee['id_uzivatele']) }}"><i class="fa-solid fa-pen-to-square fa-xl"></i></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}